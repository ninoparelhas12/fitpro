    <script>
        // Variáveis globais
        let userProfile = {};
        let workoutHistory = [];
        let photoGallery = [];
        let apiActive = false;
        const validApiKey = "FITTRACKER-PRO-2025-ACTIVE";

        // Função para ativar API
        function activateAPI() {
            const keyInput = document.getElementById('apiKey').value;
            const statusDiv = document.getElementById('apiStatus');
            const mainContent = document.getElementById('mainContent');
            
            if (keyInput === validApiKey) {
                apiActive = true;
                statusDiv.className = 'api-status';
                statusDiv.innerHTML = '✅ API Ativada - Sistema Liberado';
                mainContent.style.display = 'block';
                document.getElementById('apiKey').style.display = 'none';
                document.querySelector('button[onclick="activateAPI()"]').style.display = 'none';
            } else {
                statusDiv.className = 'api-status inactive';
                statusDiv.innerHTML = '❌ Chave Inválida - Tente Novamente';
                setTimeout(() => {
                    statusDiv.innerHTML = '❌ API Inativa - Insira sua chave de ativação';
                }, 3000);
            }
        }

        // Função para alternar seções
        function showSection(sectionId) {
            if (!apiActive) {
                alert('Por favor, ative o sistema primeiro com sua chave de API!');
                return;
            }
            
            // Esconder todas as seções
            const sections = document.querySelectorAll('.content-section');
            sections.forEach(section => section.classList.remove('active'));
            
            // Remover classe active de todas as abas
            const tabs = document.querySelectorAll('.nav-tab');
            tabs.forEach(tab => tab.classList.remove('active'));
            
            // Mostrar seção selecionada
            document.getElementById(sectionId).classList.add('active');
            
            // Ativar aba correspondente
            event.target.classList.add('active');
        }

        // Função para salvar perfil
        function saveProfile() {
            userProfile = {
                name: document.getElementById('userName').value,
                age: document.getElementById('userAge').value,
                weight: document.getElementById('userWeight').value,
                height: document.getElementById('userHeight').value,
                gender: document.getElementById('userGender').value,
                medical: document.getElementById('medicalConditions').value,
                activity: document.getElementById('activityLevel').value,
                goal: document.getElementById('mainGoal').value
            };
            
            alert('✅ Perfil salvo com sucesso!');
            calculateCalories();
        }

        // Função para calcular calorias
        function calculateCalories() {
            if (userProfile.weight && userProfile.height && userProfile.age) {
                const bmr = userProfile.gender === 'Masculino' 
                    ? 88.362 + (13.397 * userProfile.weight) + (4.799 * userProfile.height) - (5.677 * userProfile.age)
                    : 447.593 + (9.247 * userProfile.weight) + (3.098 * userProfile.height) - (4.330 * userProfile.age);
                
                const activityMultiplier = {
                    'Sedentário': 1.2,
                    'Pouco Ativo': 1.375,
                    'Moderadamente Ativo': 1.55,
                    'Muito Ativo': 1.725,
                    'Extremamente Ativo': 1.9
                };
                
                const dailyCalories = Math.round(bmr * activityMultiplier[userProfile.activity]);
                
                document.getElementById('calorieCalculation').innerHTML = `
                    <div class="stat-card">
                        <div class="stat-number">${dailyCalories}</div>
                        <div>Calorias Diárias Recomendadas</div>
                    </div>
                `;
            }
        }

        // Função para gerar treino
        function generateWorkout() {
            const workoutType = document.getElementById('workoutType').value;
            const workouts = {
                'Musculação': [
                    'Supino reto - 4x8-12',
                    'Agachamento - 4x10-15',
                    'Levantamento terra - 3x6-8',
                    'Desenvolvimento militar - 3x8-12',
                    'Remada curvada - 4x8-12',
                    'Rosca direta - 3x10-15'
                ],
                'Calistenia': [
                    'Flexões - 4x máximo',
                    'Pull-ups - 4x máximo',
                    'Dips - 3x máximo',
                    'Agachamento búlgaro - 3x12 cada perna',
                    'Prancha - 3x 60 segundos',
                    'Burpees - 3x10'
                ],
                'Pilates': [
                    'The Hundred - 2x',
                    'Roll Up - 8x',
                    'Single Leg Stretch - 10x cada perna',
                    'Double Leg Stretch - 10x',
                    'Teaser - 5x',
                    'Swimming - 10x'
                ],
                'Cardio': [
                    'Aquecimento - 5 minutos',
                    'Corrida moderada - 20 minutos',
                    'Intervalos de alta intensidade - 10 minutos',
                    'Caminhada de recuperação - 5 minutos',
                    'Alongamento - 5 minutos'
                ],
                'Funcional': [
                    'Kettlebell swing - 4x15',
                    'Box jump - 3x10',
                    'Battle ropes - 3x30s',
                    'Agachamento com salto - 4x12',
                    'Prancha lateral - 3x30s cada lado',
                    'Mountain climbers - 3x20'
                ],
                'Yoga': [
                    'Saudação ao sol - 5x',
                    'Guerreiro I - 1 minuto cada lado',
                    'Guerreiro II - 1 minuto cada lado',
                    'Cachorro olhando para baixo - 2 minutos',
                    'Cobra - 1 minuto',
                    'Savasana - 5 minutos'
                ]
            };
            
            const selectedWorkout = workouts[workoutType];
            let workoutHtml = `<h4>Treino de ${workoutType}</h4>`;
            
            selectedWorkout.forEach((exercise, index) => {
                workoutHtml += `<div class="workout-item">${index + 1}. ${exercise}</div>`;
            });
            
            document.getElementById('workoutContent').innerHTML = workoutHtml;
        }

        // Função para iniciar treino
        function startWorkout() {
            alert('⏱️ Treino iniciado! Cronômetro ativado.');
            // Aqui você poderia implementar um cronômetro real
        }

        // Função para salvar treino
        function saveWorkout() {
            const workout = {
                type: document.getElementById('workoutType').value,
                date: new Date().toLocaleDateString(),
                completed: true
            };
            
            workoutHistory.push(workout);
            updateWorkoutHistory();
            alert('💾 Treino salvo no histórico!');
        }

        // Função para atualizar histórico
        function updateWorkoutHistory() {
            let historyHtml = '';
            workoutHistory.forEach(workout => {
                historyHtml += `
                    <div class="workout-item">
                        <strong>${workout.type}</strong> - ${workout.date}
                        <span style="color: green;">✅ Concluído</span>
                    </div>
                `;
            });
            
            document.getElementById('workoutHistory').innerHTML = historyHtml || '<p>Nenhum treino registrado ainda.</p>';
        }

        // Função para registrar atividade
        function logActivity() {
            const type = document.getElementById('activityType').value;
            const duration = document.getElementById('activityDuration').value;
            const calories = document.getElementById('activityCalories').value;
            
            if (duration && calories) {
                // Atualizar estatísticas do dia
                document.getElementById('todayCalories').textContent = calories;
                document.getElementById('todayTime').textContent = duration;
                document.getElementById('todayDistance').textContent = Math.round(duration * 0.1); // Estimativa
                document.getElementById('avgHeartRate').textContent = Math.round(120 + Math.random() * 40);
                
                alert('📊 Atividade registrada com sucesso!');
                
                // Limpar campos
                document.getElementById('activityDuration').value = '';
                document.getElementById('activityCalories').value = '';
            } else {
                alert('⚠️ Preencha todos os campos!');
            }
        }

        // Função para compartilhar relatório
        function shareReport(platform) {
            const message = `🏋️ Acabei de completar meu treino no FitTracker Pro! 
💪 ${document.getElementById('todayTime').textContent} minutos de exercício
🔥 ${document.getElementById('todayCalories').textContent} calorias queimadas
#fitness #workout #health`;
            
            const urls = {
                facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.href)}&quote=${encodeURIComponent(message)}`,
                instagram: `https://www.instagram.com/`, // Instagram não permite compartilhamento direto via URL
                twitter: `https://twitter.com/intent/tweet?text=${encodeURIComponent(message)}`,
                whatsapp: `https://wa.me/?text=${encodeURIComponent(message)}`
            };
            
            if (platform === 'instagram') {
                alert('📷 Para compartilhar no Instagram, tire um screenshot do seu relatório e poste manualmente!');
            } else {
                window.open(urls[platform], '_blank');
            }
        }

        // Função para cadastrar professor
        function registerTrainer() {
            const name = document.getElementById('trainerName').value;
            const cref = document.getElementById('trainerCref').value;
            
            if (name && cref) {
                alert('✅ Professor cadastrado com sucesso!');
            } else {
                alert('⚠️ Preencha todos os campos obrigatórios!');
            }
        }

        // Função para atribuir treino
        function assignWorkout() {
            const student = document.getElementById('studentSelect').value;
            const workout = document.getElementById('customWorkoutPlan').value;
            
            if (workout) {
                alert(`📤 Treino enviado para ${student} com sucesso!`);
                document.getElementById('customWorkoutPlan').value = '';
            } else {
                alert('⚠️ Descreva o plano de treino!');
            }
        }

        // Função para visualizar perfil
        function viewProfile(username) {
            alert(`👤 Visualizando perfil de ${username}...`);
        }

        // Função para preview de foto
        function previewPhoto() {
            const file = document.getElementById('photoUpload').files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('photoPreview').innerHTML = `
                        <img src="${e.target.result}" style="max-width: 300px; max-height: 300px; border-radius: 10px;">
                    `;
                };
                reader.readAsDataURL(file);
            }
        }

        // Função para salvar foto
        function savePhoto() {
            const description = document.getElementById('photoDescription').value;
            const category = document.getElementById('photoCategory').value;
            const file = document.getElementById('photoUpload').files[0];
            
            if (file && description) {
                photoGallery.push({
                    description,
                    category,
                    date: new Date().toLocaleDateString()
                });
                
                alert('📷 Foto salva na galeria!');
                document.getElementById('photoDescription').value = '';
                document.getElementById('photoUpload').value = '';
                document.getElementById('photoPreview').innerHTML = '';
            } else {
                alert('⚠️ Selecione uma foto e adicione uma descrição!');
            }
        }

        // Inicialização
        document.addEventListener('DOMContentLoaded', function() {
            // Gerar treino inicial
            generateWorkout();
        });
    </script>
